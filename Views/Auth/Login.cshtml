      <div>
        <input type="checkbox" id="remember" name="RememberMe" asp-for="RememberMe" />
        <label for="remember">Ghi nhớ đăng nhập</label>
      </div>
      <a href="#">Quên mật khẩu?</a>
    </div> *@
  </div>
</div>