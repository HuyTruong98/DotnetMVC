@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Trang quản trị";
}

<div class="dashboard">
    <div class="dashboard-header">
        <h1><i class="fas fa-tachometer-alt"></i> Chào mừng đến với trang quản trị</h1>
        <p>Quản lý cửa hàng trực tuyến của bạn một cách hiệu quả</p>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <img style="height: 40px" src="~/images/user (2).png" />
            </div>
            <div class="stat-info">
                <h3>1,254</h3>
                <p>Người dùng</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <img style="height: 40px" src="~/images/new-product.png" />
            </div>
            <div class="stat-info">
                <h3>542</h3>
                <p>Sản phẩm</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <img style="height: 40px" src="~/images/shoppping-bag.png" />
            </div>
            <div class="stat-info">
                <h3>189</h3>
                <p>Đơn hàng</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <img style="height: 40px" src="~/images/revenue.png" />
            </div>
            <div class="stat-info">
                <h3>$12,541</h3>
                <p>Doanh thu</p>
            </div>
        </div>
    </div>

    <div class="recent-activities">
        <h3>Hoạt động gần đây</h3>
        <div class="activity-list">
            <div class="activity-item">
                <i class="fas fa-user-plus"></i>
                <div class="activity-content">
                    <p>Người dùng mới đã đăng ký</p>
                    <span>2 phút trước</span>
                </div>
            </div>
            <div class="activity-item">
                <i class="fas fa-shopping-cart"></i>
                <div class="activity-content">
                    <p>Đơn hàng mới #123</p>
                    <span>5 phút trước</span>
                </div>
            </div>
        </div>
    </div>
</div>