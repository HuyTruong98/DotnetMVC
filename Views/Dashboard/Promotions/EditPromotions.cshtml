@model OnlineStoreMVC.Models.PromotionViewModel
@{
  Layout = "~/Views/Shared/_DashboardLayout.cshtml";
  ViewData["Title"] = "Chỉnh sửa khuyến mãi";
}

<div class="d-flex justify-content-center mt-5">
  <div class="card shadow" style="width: 600px;">
    <div class="card-header bg-warning text-dark">
      <h4 class="mb-0">✏️ Chỉnh sửa khuyến mãi</h4>
    </div>
    <div class="card-body">
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })

      <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PromotionID" />

        <div class="mb-3">
          <label asp-for="ProductID" class="form-label">Sản phẩm</label>
          <select asp-for="ProductID" class="form-select" asp-items="ViewBag.ProductList">
            <option value="">-- Chọn sản phẩm --</option>
          </select>
          <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="DiscountPercent" class="form-label">Giảm giá (%)</label>
          <input asp-for="DiscountPercent" class="form-control" />
          <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
          <input asp-for="StartDate" type="date" class="form-control" />
          <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
          <input asp-for="EndDate" type="date" class="form-control" />
          <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Cập nhật</button>
        <a href="/Dashboard/Promotions" class="btn btn-secondary ms-2">Quay lại</a>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}