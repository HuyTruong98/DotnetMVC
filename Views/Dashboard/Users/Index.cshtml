@model List<OnlineStoreMVC.Models.User>
@{
  Layout = "~/Views/Shared/_DashboardLayout.cshtml";
  ViewData["Title"] = "Quản lý người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Danh sách người dùng</h2>

  <a class="btn btn-success" href="/Dashboard/User/Create">
    ➕ Tạo mới
  </a>
</div>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>Tên đăng nhập</th>
      <th>Họ tên</th>
      <th>Email</th>
      <th>Điện thoại</th>
      <th>Vai trò</th>
      <th>Thao tác</th>
    </tr>
  </thead>
  <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
      <tr>
        <td>@(i + 1)</td>
        <td>@Model[i].Username</td>
        <td>@Model[i].FullName</td>
        <td>@Model[i].Email</td>
        <td>@Model[i].Phone</td>
        <td>@Model[i].Role</td>
        <td>
          <a class="btn btn-sm btn-primary" href="/Dashboard/User/Edit/@Model[i].UserID">Sửa</a>
          <a class="btn btn-sm btn-danger" href="/Dashboard/User/Delete/@Model[i].UserID"
            onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">Xóa</a>
        </td>
      </tr>
    }
  </tbody>
</table>